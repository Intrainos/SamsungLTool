<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:id="@+id/gotoDownloadBooster">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Ops"
        android:id="@+id/gotoAppops"
        android:layout_alignTop="@+id/space"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch Light"
        android:id="@+id/gotoTouchlightSetting"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignTop="@+id/space"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S View WallPaper Change (for Note)"
        android:id="@+id/gotoSViewWPSetting"
        android:layout_below="@+id/gotoAppops"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gotoTouchlightSetting" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool Box Setting"
        android:id="@+id/gotoToolBoxSetting"
        android:layout_below="@+id/gotoSViewWPSetting"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gotoAppops" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotoToolBoxList"
        android:layout_below="@+id/gotoSViewWPSetting"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/gotoTouchlightSetting"
        android:text="Tool Box List" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Booster Setting"
        android:id="@+id/gotoDownloadBoosterSetting"
        android:layout_below="@+id/gotoToolBoxSetting"
        android:layout_alignStart="@+id/gotoToolBoxSetting"
        android:layout_alignEnd="@+id/gotoSViewWPSetting"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galaxy S5 Power Saving Mode"
        android:id="@+id/goto2014PowerSavingModeSetting"
        android:layout_below="@+id/gotoDownloadBoosterSetting"
        android:layout_alignStart="@+id/gotoDownloadBoosterSetting"
        android:layout_alignEnd="@+id/gotoDownloadBoosterSetting" />

</RelativeLayout>